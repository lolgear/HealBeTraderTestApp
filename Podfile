platform :ios, '7.0'

source 'https://github.com/CocoaPods/Specs.git'

target 'Trader' do

# network
pod 'AFNetworking'

# database management
pod 'MagicalRecord'

# well-styled progress hud
pod 'MBProgressHUD', '~> 0.9.1'
# little notification messages for errors
pod 'TSMessages'
# qr code recognition
# pod 'ZXingObjC', '~> 3.0'

# logging
pod 'CocoaLumberjack'

end